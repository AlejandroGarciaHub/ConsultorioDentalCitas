<div class="top-formulario row center-xs text-center">
  <div class="col-xs-8 col-md-8 col-md-offset-2">
<h1>Tratamientos Ofrecidos</h1>


  <% if current_user.try(:admin?)%>
<%= link_to 'Agregar Nuevo Tratamiento', new_procedure_path %>
<%end%>
<br>
  <% @procedures.each do |procedure| %>
  <h4><%= procedure.nombre %></h4>
  <div class="row">
      <div class="col s12 m12">
        <div class="card-panel teal white-text">
          <tr>
        
        <td><%= procedure.descripcion %></td>  
        
      </tr>
        </div>
        <% if current_user.try(:admin?)%>
        <td><%= link_to 'Mostrar', procedure %></td>
        <td><%= link_to 'Editar', edit_procedure_path(procedure) %></td>
        <td><%= link_to 'Eliminar', procedure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
        <td>Costo: $<%= procedure.costo%></td> 
      </div>
    </div>

  <%end%>
</div>
</div>