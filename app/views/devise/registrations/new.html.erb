<div class="row center-xs text-center">
  <div class="col-xs-8 col-md-4 col-md-offset-4">
<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :apellidos %><br />
    <%= f.text_field :apellidos %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :fecha_nac, "Fecha de Nacimiento" %><br />
    <%= f.text_field :fecha_nac, class:"input-group datepicker" %>
  </div>
 <div class="field">
    <%= f.label :sexo%>
    <%=f.select :sexo, [['Masculino', 'Masculino'], ['Femenino', 'Femenino']]%>
  </div>
  <div class="field">
    <%= f.label :password, "ContraseÃ±a" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar contraseÃ±a" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
