<%= form_for([@appointment,@appointments_procedure]) do |f| %>


<div class="field campos-texto">
    <%= f.label :procedure_id, "Tratamiento" %><br>
    <%= f.collection_select :procedure_id, Procedure.all, :id, :nombre, { prompt: "Elije un tratamiento" }, class: "browser-default" %>
  </div>
  <div class="field campos-texto">
    <%= f.label :anotaciones %><br>
    <%= f.text_area :anotaciones %>
  </div>
  <div class="actions">
    <%= f.submit "Crear" %>
  </div>
<% end %>
