<div class="top-formulario row center-xs text-center">
  <div class="col-xs-8 col-md-8 col-md-offset-2">
<h1>Procedimientos realizados en la cita</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Anotaciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments_procedures.each do |appointments_procedure| %>
      <tr>
        <td><%= appointments_procedure.procedure.nombre%></td>
        <td><%= appointments_procedure.anotaciones %></td>
        <td><%= link_to 'Mostrar', appointment_appointments_procedure_path(@appointment,appointments_procedure) %></td>
        <td><%= link_to 'Editar', edit_appointment_appointments_procedure_path(@appointment, appointments_procedure) %></td>
        <td><%= link_to 'Eliminar', [@appointment, appointments_procedure], method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Añadir procedimiento', new_appointment_appointments_procedure_path %>
</div>
</div>